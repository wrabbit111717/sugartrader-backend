<div class="main">
  <div class="user-container">
    <ul class="breadcrumb">
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">

      <!-- BEGIN CONTENT -->
      <div class="col-md-push-3 col-md-9 col-sm-9">
        <div class="content-form-page">
          <div class="row">
            <div class="col-md-7 col-sm-7">
              <div class="portlet">
                  <div class="portlet-title text-center">
                      <h2 class="uppercase text-success text-center bold">Sign in</h2>
                  </div>
                  <div class="portlet-body form">
                      <% if(errors != '') {%>
                        <div class="alert alert-block alert-danger fade in col-md-push-3 col-md-9">
                          <button type="button" class="close" data-dismiss="alert"></button>
                          <lable class="alert-heading bold">Alert!</label> <span><%= errors%></span>
                            
                        </div>
                      <%}%>
                      
                      <form class="form-horizontal form-without-legend" role="form" action="/auth/signin" method="POST">
                        <div class="form-group">
                          <label for="email" class="col-lg-4 control-label">Email <span class="require">*</span></label>
                          <div class="col-lg-8">
                            <input type="text" class="form-control" id="email" name="email">
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="password" class="col-lg-4 control-label">Password <span class="require">*</span></label>
                          <div class="col-lg-8">
                            <input type="password" class="form-control" id="password" name="password">
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-8 col-md-offset-4 padding-left-0">
                            <a href="/auth/forgotpassword">Forget Password?</a>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                            <button type="submit" class="btn btn-primary btn-lg" style="width: 96%;">Login</button>
                          </div>
                        </div>
                      </form>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
  </div>
</div>