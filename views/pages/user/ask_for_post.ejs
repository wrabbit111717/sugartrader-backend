<div class="main">
    <div class="user-container">
        <ul class="breadcrumb">
        </ul>
        <div class="row margin-bottom-40">
            <!-- BEGIN CONTENT -->
            <div class="col-md-12 col-sm-12">
                <h1>Ask for a post</h1>
                <div class="content-page">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="form-horizontal" role="form" id="askForm" method="POST" action="/ask_for_post_save">
                                <input type="hidden" id="ask" value="<%= session.ask%>">
                                <input type="hidden" id="left_membership" value="<%= session.left_membership%>">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Title <span class="require">*</span></label>
                                        <div class="col-md-4">
                                            <input type="text" id="title" name="title" class="form-control" placeholder="Title">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Category <span class="require">*</span></label>
                                        <div class="col-md-4">
                                            <select class="form-control" id="category" name="category">
                                                <% categories.forEach(function(category) {%>
                                                    <option value="<%= category.name%>"><%= category.name%></option>
                                                <%});%>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Email <span class="require">*</span></label>
                                        <div class="col-md-4">
                                            <input type="email" id="email" name="email" class="form-control" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">What is the post about <span class="require">*</span></label>
                                        <div class="col-md-7">
                                            <textarea class="form-control" id="content" name="content" rows="10" placeholder="Please ask for a post"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group text-center" style="margin-top: 40px;">
                                        <button class="btn btn-success" type="button" id="btn_save"><i class="fa fa-save"></i> Submit</button>
                                        <button class="btn btn-danger" type="reset" id="btn_reset"><i class="icon-reload"></i> Reset</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
    </div>
</div>
<script src="../../js/user/ask_for_post.js"></script>